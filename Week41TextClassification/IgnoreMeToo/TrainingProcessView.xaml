<UserControl x:Class="Week41TextClassification.View.TrainingProcessView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Week41TextClassification.View"
        mc:Ignorable="d"
        d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center">
        <TextBlock FontSize="80" Text="{Binding TimeUsedText}" VerticalAlignment="Center" HorizontalAlignment="Center"></TextBlock>
        <TextBlock FontSize="60" Text="{Binding InfoText}" VerticalAlignment="Center" HorizontalAlignment="Center"></TextBlock>
    </StackPanel>
</UserControl>
